<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controlleur.MainActivity">

    <TextView
        android:id="@+id/activity_main_text_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="#FFF"
        android:text="SensorPro"
        android:gravity="center"
        android:textSize="35dp"
        android:padding="8dp"
        android:textStyle="bold"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_main_text_sensortype"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="7dp"
            android:text="SensorType"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/activity_main_text_value1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center"
            android:padding="5dp"
            android:text="v1"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/activity_main_text_value2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center"
            android:padding="5dp"
            android:text="v2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/activity_main_text_value3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center"
            android:padding="5dp"
            android:text="v3"
            android:textSize="15dp" />


    </LinearLayout>

        <Button
        android:id="@+id/activity_main_QuitApp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Quit"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:textStyle="italic"
        android:background="@color/colorAccent"
        android:textColor="#FFF"/>
</LinearLayout>