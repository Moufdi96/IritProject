<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controlleur.MainActivity">

    <TextView
        android:id="@+id/activity_main_text_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="#FFF"
        android:text="Sensors"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/activity_main_text_accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer (m/sÂ²)"
            android:textSize="15dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="#FFF"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/activity_main_text_xaccelerometer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:text="X"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/activity_main_text_yaccelerometer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:text="Y"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/activity_main_text_zaccelerometer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:text="Z"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/activity_main_text_photometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photometer (cm)"
            android:textSize="15dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="#FFF"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/activity_main_text_photometer1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:text="X"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/activity_main_text_photometer2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:text="Y"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/activity_main_QuitApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@color/colorAccent"
        android:textColor="#FFF"/>

</LinearLayout>